<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/player_cloud_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/player_iv_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/player_tv_publisher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="48dp"
            android:layout_height="58dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/player_civ_avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@mipmap/default_header" />
            <ImageView
                android:id="@+id/followBtn"
                android:src="@mipmap/guanzhu"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/likeImageView"
            android:layout_marginTop="30dp"
            android:src="@mipmap/video_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/likeNumView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:layout_marginTop="2dp"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            />
        <ImageView
            android:id="@+id/commentView"
            android:src="@mipmap/xiaoxi"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论"
            android:layout_marginTop="2dp"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/player_tv_publisher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:text="老周"
        android:layout_above="@id/titleView"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="又是欣赏戏曲的一天"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="#fffcfcfd"
        android:textSize="12sp"
        android:shadowDx="0"
        android:shadowDy="1"
        android:shadowRadius="3.0"
        android:shadowColor="#80010101"
        />
</RelativeLayout>