<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bgView"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <com.yiheoline.qcloud.xiaozhibo.widgets.StatusBarHeightView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_type="use_padding_top"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="260dp">
                <ImageView
                    android:src="@mipmap/main_bg_cover"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:id="@+id/backBtn"
                    android:src="@mipmap/back2"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/infoContain"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="32dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:textColor="#ffd1d1d1"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:id="@+id/followNumView"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10万"
                        android:textColor="#ffffffff"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝"
                        android:layout_marginStart="10dp"
                        android:textColor="#ffd1d1d1"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:id="@+id/fansNumView"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999万"
                        android:textColor="#ffffffff"
                        android:textSize="12sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获赞"
                        android:layout_marginStart="10dp"
                        android:textColor="#ffd1d1d1"
                        android:textSize="10sp"
                        />
                    <TextView
                        android:id="@+id/likeNumView"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999万"
                        android:textColor="#ffffffff"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <ImageView
                    android:id="@+id/followBtn"
                    android:layout_marginBottom="41dp"
                    android:layout_marginEnd="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/guanzhu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/nameView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="杨丽萍"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_above="@+id/infoContain"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"
                    />
                <ImageView
                    android:id="@+id/sexImageView"
                    android:layout_marginBottom="17dp"
                    android:layout_marginStart="5dp"
                    android:layout_above="@id/infoContain"
                    android:layout_toEndOf="@+id/nameView"
                    android:src="@mipmap/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="240dp"
                android:background="@drawable/start_play_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/professionView"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:drawablePadding="10dp"
                    android:drawableStart="@mipmap/renzheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/desc"
                        android:layout_marginStart="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/descView"
                        android:gravity="top"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:textColor="#ff333333"
                        android:textSize="12sp"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">
                    <LinearLayout
                        android:id="@+id/singleShowContain"
                        android:orientation="vertical"
                        android:layout_marginEnd="5dp"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_toStartOf="@+id/centerLine"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/singleShowText"
                            android:text="作品"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/singleShowLine"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/login_btn"
                            android:layout_width="15dp"
                            android:layout_height="2dp"/>
                    </LinearLayout>

                    <View
                        android:id="@+id/centerLine"
                        android:layout_centerInParent="true"
                        android:layout_width="1dp"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:id="@+id/playContain"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/centerLine"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/playTextView"
                            android:text="视频"
                            android:textColor="#999999"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/playLineView"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/login_btn"
                            android:layout_width="15dp"
                            android:visibility="gone"
                            android:layout_height="2dp"/>
                    </LinearLayout>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </com.yiheoline.qcloud.xiaozhibo.widgets.StatusBarHeightView>

</RelativeLayout>