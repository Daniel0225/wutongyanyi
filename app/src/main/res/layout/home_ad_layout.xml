<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adLayout"
    android:visibility="gone"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.yiheoline.qcloud.xiaozhibo.widgets.AutoAdjustHeightImageView
        android:id="@+id/adImageView"
        android:src="@mipmap/default_ad"
        android:scaleType="centerCrop"
        app:aspectRatio="1.8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@mipmap/ad_tag"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/adTitleView"
        android:layout_below="@id/adImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        android:text="星巴克年末大促销，全场辈子一元抢购"
        android:textColor="#ff333333"
        android:textSize="12sp"
        />
    <TextView
        android:layout_below="@id/adTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拼多多"
        android:textColor="#ff999999"
        android:textSize="10sp"
        />
</RelativeLayout>