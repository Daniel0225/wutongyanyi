<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginEnd="2.5dp"
    android:layout_marginStart="2.5dp"
    android:layout_height="wrap_content">

    <com.yiheoline.qcloud.xiaozhibo.widgets.AutoAdjustHeightImageView
        android:id="@+id/productImage"
        android:scaleType="fitXY"
        app:aspectRatio="0.7"
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/goodsNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="海秀儿 HAESOO.LJE805O 耳饰"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="#ff333333"
        android:layout_marginStart="7.5dp"
        android:layout_marginEnd="7.5dp"
        android:layout_marginTop="10dp"
        android:textSize="12sp"
        />

    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/headerView"
            android:src="@mipmap/ic_launcher"
            android:layout_marginStart="5dp"
            android:layout_width="16dp"
            android:layout_height="16dp"/>
        <TextView
            android:id="@+id/nameView"
            android:layout_toEndOf="@+id/headerView"
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手撕包菜"
            android:textColor="#ff999999"
            android:textSize="10sp"
            />
        <ImageView
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@id/likeNumView"
            android:src="@mipmap/like"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/likeNumView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99.9万"
            android:textColor="#ff999999"
            android:textSize="10sp"
            />
    </RelativeLayout>
</LinearLayout>