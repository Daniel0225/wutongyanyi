<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/toolbar_layout"/>

    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="44dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/coverImage"
                    android:src="@mipmap/logo"
                    android:background="#000000"
                    android:layout_width="90dp"
                    android:layout_height="119dp"/>

                <TextView
                    android:id="@+id/noticeTitleView"
                    android:layout_toEndOf="@+id/coverImage"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:lines="2"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="薛丁格的猫罐头薛丁格的猫罐头薛丁格的猫罐头"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/dateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2020.12.19-2021.06.06"
                    android:textColor="#ff999999"
                    android:textSize="12sp"
                    android:layout_below="@+id/noticeTitleView"
                    android:layout_toEndOf="@+id/coverImage"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="以现场为准"
                    android:textColor="#ff999999"
                    android:textSize="12sp"
                    android:layout_below="@+id/dateView"
                    android:layout_toEndOf="@+id/coverImage"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="15dp"
                    />
                <TextView
                    android:layout_below="@+id/dateView"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/coverImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="#fffd8318"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/priceView"
                    android:layout_below="@+id/dateView"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="29dp"
                    android:layout_toEndOf="@+id/coverImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="180"
                    android:textColor="#fffd8318"
                    android:textSize="14sp"
                    />
                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="5dp"
                    android:layout_alignBottom="@+id/priceView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/statusView"
                        android:src="@mipmap/started"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/statusTextView"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="直播中"
                        android:textColor="#fffd8318"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:background="#FCFCFD"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详情"
                        android:textColor="#ff333333"
                        android:textSize="18sp"
                        />
                    <ImageView
                        android:id="@+id/tabLine"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/login_btn"
                        android:layout_width="15dp"
                        android:layout_height="2dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="须知"
                        android:textColor="#999999"
                        android:textSize="14sp"
                        />
                    <ImageView
                        android:id="@+id/tabLine2"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/login_btn"
                        android:layout_width="15dp"
                        android:visibility="gone"
                        android:layout_height="2dp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/detailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍详情介绍...."
                android:textColor="#ff333333"
                android:textSize="12sp"
                />
            <ImageView
                android:id="@+id/detailImage"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <RelativeLayout
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/wantSeeBtn"
            android:layout_centerVertical="true"
            android:drawableTop="@mipmap/unlike"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="想看"
            android:textColor="#ff333333"
            android:textSize="12sp"
            />
        <ImageView
            android:src="@mipmap/buy_now"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>