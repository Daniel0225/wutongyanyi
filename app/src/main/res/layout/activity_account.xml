<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_layout"/>

    <androidx.core.widget.NestedScrollView
        android:layout_weight="1"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_margin="15dp"
                android:background="@drawable/login_btn"
                android:layout_width="match_parent"
                android:layout_height="140dp">
                <TextView
                    android:id="@+id/label"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的余额"
                    android:textColor="#ffffffff"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/totalView"
                    android:layout_below="@id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1090"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffffff"
                    android:textSize="36sp"
                    />
                <TextView
                    android:layout_toEndOf="@id/totalView"
                    android:layout_alignBaseline="@id/totalView"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="梧桐叶"
                    android:textColor="#ffffffff"
                    android:textSize="12sp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值金额"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:textColor="#ff333333"
                android:textSize="16sp"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginTop="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_gray_line"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:text="¥"
                    android:textColor="#ff999999"
                    android:textSize="12sp"
                    />
                <EditText
                    android:background="@null"
                    android:hint="自定义充值"
                    android:textSize="12sp"
                    android:paddingStart="35dp"
                    android:paddingEnd="35dp"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="请选择支付方式"
                android:textColor="#ff333333"
                android:textSize="16sp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="15dp"
                />
            <CheckBox
                android:id="@+id/aliPay"
                android:layout_below="@+id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="20dp"
                android:drawableEnd="@mipmap/zhifubao"
                android:drawablePadding="10dp"
                android:layout_marginStart="30dp"
                android:background="@null"
                android:button="@drawable/invoice_selector"
                android:layoutDirection="rtl"
                android:text="支付宝支付"
                android:checked="true"
                android:textColor="#ff8d95a8"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/confirmBtn"
        android:text="确定充值"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/login_btn"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已阅读并同意"
            android:textColor="#ff9a9a9a"
            android:textSize="11sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户充值协议》"
            android:textColor="#fffd8318"
            android:textSize="11sp"
            />
    </LinearLayout>
</LinearLayout>