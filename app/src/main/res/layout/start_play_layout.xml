<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/start_play_bg"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可开启"
        android:textColor="#ff000000"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/showPlay"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/image"
                android:src="@mipmap/start1"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image"
                android:layout_marginTop="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="演出直播"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/showerPlayBtn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/image2"
                android:src="@mipmap/start2"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image2"
                android:layout_marginTop="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="艺人直播"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/upLoadBtn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/image3"
                android:src="@mipmap/start3"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image3"
                android:layout_marginTop="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/shotBtn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/image4"
                android:src="@mipmap/start4"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/image4"
                android:layout_marginTop="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拍摄"
                android:textColor="#ff999999"
                android:textSize="12sp"
                />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="#DEDEDE"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="0.5dp"/>

    <RelativeLayout
        android:id="@+id/cancelBtn"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/image5"
            android:src="@mipmap/start5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/image5"
            android:layout_marginTop="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />
    </RelativeLayout>
</LinearLayout>
