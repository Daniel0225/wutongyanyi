<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail_player"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/post_detail_nested_scroll"
        android:layout_width="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="220dp" />

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/movieTitleView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/checkMoreView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="展开"
                    android:drawableEnd="@mipmap/zhankai"
                    android:drawablePadding="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/videoDescView"
                    android:textColor="#ff8d95a8"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/checkLessView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收起"
                    android:visibility="gone"
                    android:drawableEnd="@mipmap/shouqi"
                    android:drawablePadding="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/videoDescView"
                    android:textColor="#ff8d95a8"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/videoDescView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff333333"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_below="@+id/movieTitleView"
                    android:textSize="12sp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为你推荐"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:textColor="#ff333333"
                android:textSize="18sp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:textColor="#ff333333"
                android:textSize="18sp"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommendRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <com.shuyu.gsyvideoplayer.video.NormalGSYVideoPlayer
        android:id="@+id/detailPlayer"
        android:layout_width="match_parent"
        android:layout_height="220dp" />


    <com.shuyu.gsyvideoplayer.video.GSYADVideoPlayer
        android:id="@+id/adPlayer"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/warmText"
        android:text="试看6分钟"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:visibility="visible"
        android:layout_marginTop="170dp"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/finishContain"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:background="#55333333"
        android:layout_marginTop="40dp"
        android:layout_height="180dp">
        <TextView
            android:id="@+id/finishText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="试看结束，应版权方要求，本内容需购买观看"
            android:textColor="#ffffffff"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/bugVideoBtn"
            android:layout_below="@id/finishText"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:text="5元购买"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="#ffffffff"
            android:gravity="center"
            android:background="@drawable/login_btn"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="49dp">
        <TextView
            android:id="@+id/pubCommentBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="写评论"
            android:layout_marginStart="15dp"
            android:drawableStart="@mipmap/edit_icon"
            android:drawablePadding="5dp"
            android:layout_centerVertical="true"
            android:textColor="#ff999999"
            android:textSize="12sp"
            />
        <ImageView
            android:id="@+id/collectBtn"
            android:src="@mipmap/shoucang"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/likeBtn"
            android:src="@mipmap/dianzan"
            android:layout_toStartOf="@+id/collectBtn"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/playNumView"
            android:layout_toStartOf="@+id/likeBtn"
            android:layout_marginTop="10dp"
            android:drawableTop="@mipmap/play_num"
            android:layout_marginEnd="20dp"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.0w"
            android:gravity="center"
            android:textColor="#ff999999"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/recommendView"
            android:layout_toStartOf="@+id/playNumView"
            android:layout_marginTop="10dp"
            android:drawableTop="@mipmap/recommend"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:drawablePadding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.0w"
            android:textColor="#ff999999"
            android:textSize="10sp"
            />
    </RelativeLayout>
</RelativeLayout>
