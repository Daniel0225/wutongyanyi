<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_layout"/>

    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/coverImage"
            android:scaleType="centerCrop"
            android:layout_width="90dp"
            android:layout_height="119dp"/>

        <TextView
            android:id="@+id/noticeTitleView"
            android:layout_toEndOf="@+id/coverImage"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="薛丁格的猫罐头薛丁格的猫罐头薛丁格的猫罐头"
            android:textColor="#ff333333"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/dateView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020.12.19-2021.06.06"
            android:textColor="#ff999999"
            android:textSize="12sp"
            android:layout_below="@+id/noticeTitleView"
            android:layout_toEndOf="@+id/coverImage"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以现场为准"
            android:textColor="#ff999999"
            android:textSize="12sp"
            android:layout_below="@+id/dateView"
            android:layout_toEndOf="@+id/coverImage"
            android:layout_marginTop="2dp"
            android:layout_marginStart="15dp"
            />
        <TextView
            android:layout_below="@+id/dateView"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/coverImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="#fffd8318"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/priceView"
            android:layout_below="@+id/dateView"
            android:layout_marginStart="25dp"
            android:layout_marginTop="29dp"
            android:layout_toEndOf="@+id/coverImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="180"
            android:textColor="#fffd8318"
            android:textSize="14sp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*本产品为虚拟物品，开播后不支持退款，请谨慎购买。"
        android:textColor="#ff999999"
        android:layout_marginStart="15dp"
        android:textSize="10sp"
        />

    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择支付方式："
            android:textColor="#ff333333"
            android:textSize="14sp"
            />

        <CheckBox
            android:id="@+id/aliPay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="25dp"
            android:drawableEnd="@mipmap/zhifubao"
            android:drawablePadding="10dp"
            android:layout_marginStart="30dp"
            android:background="@null"
            android:button="@drawable/invoice_selector"
            android:layoutDirection="rtl"
            android:text="支付宝支付"
            android:checked="true"
            android:textColor="#ff8d95a8"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/weixinPay"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="25dp"
            android:drawableEnd="@mipmap/weixin"
            android:drawablePadding="10dp"
            android:layout_marginStart="30dp"
            android:background="@null"
            android:button="@drawable/invoice_selector"
            android:layoutDirection="rtl"
            android:text="微信支付"
            android:textColor="#ff8d95a8"
            android:textSize="14sp" />

    </LinearLayout>
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/payNowBtn"
        android:text="立即购买"
        android:textColor="@color/white"
        android:background="@drawable/login_btn"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="35dp"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击提交订单则视为同意"
            android:textColor="#ff999999"
            android:textSize="11sp"
            />
        <TextView
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户付费协议》"
            android:textColor="#fffd8318"
            android:textSize="11sp"
            />
    </LinearLayout>
</LinearLayout>