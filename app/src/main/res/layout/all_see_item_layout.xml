<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/selectCheckMore"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大家都在看"
            android:drawableEnd="@mipmap/lujing124"
            android:drawablePadding="5dp"
            android:textColor="#ff333333"
            android:textSize="18sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/singleContain"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.yiheoline.qcloud.xiaozhibo.widgets.AutoAdjustHeightImageView
            android:id="@+id/singleImageView"
            app:aspectRatio="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/timeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="198:00"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="3dp"
            android:layout_alignBottom="@id/singleImageView"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffffff"
            android:textSize="10sp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/singleTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ff333333"
        android:textSize="14sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/singleDescView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:textColor="#ff999999"
        android:textSize="12sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selectRecycler"
        android:layout_marginStart="12.5dp"
        android:layout_marginEnd="12.5dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
