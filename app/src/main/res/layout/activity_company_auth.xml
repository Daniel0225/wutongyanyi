<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <include layout="@layout/toolbar_layout"/>

    <androidx.core.widget.NestedScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="认证类别："
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />
                <ImageView
                    android:id="@+id/companyBtn"
                    android:src="@mipmap/xuanzhong"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/companyLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司团体"
                    android:layout_marginStart="5dp"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />

                <ImageView
                    android:id="@+id/personBtn"
                    android:src="@mipmap/tuoyuan"
                    android:layout_marginStart="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/personLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人演艺从业者"
                    android:layout_marginStart="5dp"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司名称："
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/nameInputView"
                    android:layout_marginEnd="15dp"
                    android:layout_centerVertical="true"
                    android:hint="请点击输入"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:maxLines="1"
                    android:background="@drawable/gray_bg"
                    android:layout_toEndOf="@id/label1"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cardNumContain"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号："
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/cardNumInputView"
                    android:layout_marginEnd="15dp"
                    android:layout_centerVertical="true"
                    android:hint="请点击输入"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:maxLines="1"
                    android:background="@drawable/gray_bg"
                    android:layout_toEndOf="@id/label2"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/workTypeContain"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/label3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="从业类别："
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:textColor="#ff333333"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/workTypeInputView"
                    android:layout_marginEnd="15dp"
                    android:layout_centerVertical="true"
                    android:hint="请点击输入"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:maxLines="1"
                    android:background="@drawable/gray_bg"
                    android:layout_toEndOf="@id/label3"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"/>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传认证信息"
                android:layout_marginStart="15dp"
                android:textColor="#ff666666"
                android:textSize="14sp"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView2"
                    android:src="@mipmap/shangchuan1"
                    android:scaleType="centerCrop"
                    android:layout_width="129dp"
                    android:layout_height="77dp"/>
                <TextView
                    android:id="@+id/imageLabel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传法人身份证正面"
                    android:layout_marginStart="42dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView3"
                    android:src="@mipmap/shangchuan1"
                    android:scaleType="centerCrop"
                    android:layout_width="129dp"
                    android:layout_height="77dp"/>
                <TextView
                    android:id="@+id/imageLabel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传法人身份证背面"
                    android:layout_marginStart="42dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/licenseContain"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView1"
                    android:src="@mipmap/shangchuan1"
                    android:scaleType="center"
                    android:layout_width="129dp"
                    android:layout_height="77dp"/>
                <TextView
                    android:id="@+id/imageLabel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传营业执照"
                    android:layout_marginStart="42dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/honorContain"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imageView4"
                    android:src="@mipmap/shangchuan1"
                    android:scaleType="center"
                    android:layout_width="129dp"
                    android:layout_height="77dp"/>
                <TextView
                    android:id="@+id/imageLabel4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传公司荣誉照片"
                    android:layout_marginStart="42dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ff333333"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <TextView
        android:id="@+id/confirmBtn"
        android:gravity="center"
        android:text="确认提交"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_btn"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="注：一个账号只能认证一种身份，请谨慎选择，认证后无法更改。"
        android:textColor="#ff999999"
        android:textSize="10sp"
        />
    <LinearLayout
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/xuanze"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证即同意"
            android:textColor="#ff9a9a9a"
            android:textSize="11sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户服务协议》"
            android:textColor="#FE8118"
            android:textSize="11sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和"
            android:textColor="#ff9a9a9a"
            android:textSize="11sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《隐私政策》"
            android:textColor="#FE8118"
            android:textSize="11sp"
            />
    </LinearLayout>
</LinearLayout>