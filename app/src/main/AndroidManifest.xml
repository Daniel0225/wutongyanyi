        <activity android:name="com.yiheoline.qcloud.xiaozhibo.profile.CompanyAuthActivity" />
        <activity android:name="com.yiheoline.qcloud.xiaozhibo.profile.UpLoadRecordActivity" />
        <activity android:name="com.yiheoline.qcloud.xiaozhibo.profile.ShowerInfoActivity" />
