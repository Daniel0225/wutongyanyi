        <activity android:name="com.yiheoline.qcloud.xiaozhibo.homepage.ShowSettingActivity" />
        <activity
            android:name="com.yiheoline.qcloud.xiaozhibo.main.SplashActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yiheoline.qcloud.xiaozhibo.login.TCLoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme" />
        <activity
            android:name="com.yiheoline.qcloud.xiaozhibo.login.TCRegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/RegisterTheme" />
        <activity
            android:name="com.yiheoline.qcloud.xiaozhibo.main.TCMainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yiheoline.qcloud.xiaozhibo.main.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
